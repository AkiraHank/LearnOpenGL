{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",   // 任务名称，与launch.json的preLaunchTask相对应
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell",
            "command": "cd build && cmake .. && make"
        },
        {
            "label": "test",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "type": "shell",
            "command": "clang++ test.cc -o test -std=c++17"
        }
    ]
}