{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "type": "shell",
            "command": "cmake .. && make -j8"
        },
        {
            "label": "Compile Win64",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "type": "shell",
            "command": "cmake -G \"MinGW Makefiles\" .. && make -j8"
        },
        {
            "label": "test",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "type": "shell",
            "command": "clang++ test.cc -o test -std=c++17"
        },
    ]
}